server {
    listen 80;
    server_name idohr.org www.idohr.org;

    # Redirect HTTP to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name idohr.org www.idohr.org;

    # SSL Configuration (Certbot will manage these paths later)
    # ssl_certificate /etc/letsencrypt/live/idohr.org/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/idohr.org/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root /var/www/adoption-os/dist;
    index index.html;

    # Serve Vue.js Frontend
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy API Requests to Go Backend
    location /api/ {
        # Strip the /api prefix if your backend doesn't expect it (optional, 
        # but usually Go routers handle the full path. If you need rewriting:
        # rewrite ^/api/(.*) /$1 break;)
        
        # Rewrite /api/(.*) to /$1 before passing to backend
        rewrite ^/api/(.*) /$1 break;
        
        proxy_pass http://127.0.0.1:8080;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Increase timeouts for long-running requests if needed
        # proxy_read_timeout 60s;
    }

    # Optional: Serve uploaded files directly if they are outside the build
    location /uploads/ {
        alias /var/www/adoption-os/uploads/;
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }
}
